<?xml version="1.0" encoding="utf-8"?>

<level-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:drawable="@color/colorWhite"
        android:maxLevel="0">
        <clip>
            <shape android:shape="rectangle" />
        </clip>
    </item>
    <item
        android:maxLevel="2000"
        android:minLevel="1">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorRed" />
            </shape>
        </clip>
    </item>
    <item android:maxLevel="4000">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorOrange" />
            </shape>
        </clip>
    </item>
    <item android:maxLevel="6000">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorYellow" />
            </shape>
        </clip>
    </item>
    <item android:maxLevel="8000">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorLightGreen" />
            </shape>
        </clip>
    </item>
    <item android:maxLevel="10000">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorGreen" />
            </shape>
        </clip>
    </item>

</level-list>

